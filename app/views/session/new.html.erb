<div class="form">
<%= form_tag login_path do %>

<div class="form-group">
  <%= label_tag :email_address %>
  <%= email_field_tag :email_address, nil, :class=>"form-control", :id=>"exampleInputEmail1", :placeholder=>"Email address"%>
  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
</div>

<div class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, nil, :class=>"form-control", :placeholder=>"Password" %>
</div>

<%=  submit_tag "Log in", :class=>"btn btn-primary" %>

<div class="form-check">
  <input type="checkbox" class="form-check-input" id="exampleCheck1">
  <label class="form-check-label" for="exampleCheck1">Check me out</label>
</div>

<div class="form-group">
<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
</div>

<% end %>
</div>
