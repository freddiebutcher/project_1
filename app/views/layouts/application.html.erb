<!DOCTYPE html>
<html>

<head>
  <title>Podsta</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= cloudinary_js_config %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>


<% if @current_user.present? %>
  <!-- Nav -->
  <div class="navcontainer">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Podsta</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">

        <li class="nav-item active">
          <%= link_to @current_user.username, user_path(@current_user.id), :class=>"nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Edit", edit_user_path, :class=>"nav-link" %>
        </li>
        <li class="nav-item">
          <li><%= link_to "Posts", posts_path, :class=>"nav-link" %></li>
        </li>
        <li class="nav-item">
          <li><%= link_to "Users", users_path, :class=>"nav-link" %></li>
        </li>
        <li class="nav-item">
          <li><%= link_to "New", new_post_path, :class=>"nav-link" %></li>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Out", login_path, :method => :delete, :class=>"nav-link" %>
        </li>
      </ul>
    </div>
  </nav>
  </div>

  <% end %>

  <div class="divider">
  </div>

  <!-- MAIN CONTENT -->
  <main class="container" style="min-height: 500px;">
    <%= yield %>
  </main>

  <!-- FOOTER -->
  <footer class="container footer">
    <nav class="navbar d-flex">
      <p>Â© 2019 Podsta</p>
    </nav>
  </footer>

</body>

</html>
